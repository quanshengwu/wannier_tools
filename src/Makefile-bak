# compiler
#f90  = gfortran -cpp -DINTELMKL
f90  = mpif90 -fpp -DMPI -DINTELMKL -O3 -nogen-interface -fpe3 #-pg -traceback -check all -debug extended

#flag = -O1 -ffree-line-length-512  -g -Wall -Wextra -Warray-temporaries -Wconversion -fimplicit-none -fbacktrace -ffree-line-length-0 -fcheck=all -ffpe-trap=zero,overflow,underflow -finit-real=nan
flag = 
libs = -L/opt/intel/mkl/lib/ \
		-lmkl_intel_lp64 -lmkl_sequential \
		-lmkl_core \
 	/Users/user/quan/work/workplace/ARPACK/libarpack_MAC.a
#	/Users/user/quan/work/workplace/ARPACK/libarpack_MAC_gfortran.a
 

# blas and lapack libraries
#libs = -L/usr/lib/ -llapack -lblas
 
# Intel MKL also supports with gfortran comipler
# dynamic linking
# libs = -L/${MKLROOT}/lib/intel64 -lmkl_core -lmkl_sequential -lmkl_intel_lp64 -lpthread
 
 
main :  $(obj)
	$(f90) $(flag) $(obj) -o wt.x $(libs) 
	cp -f wt.x ../bin

.SUFFIXES: .o .f90

.f90.o :
	$(f90) -c $(flag) $(includes) $*.f90

clean :
	rm -f *.o *.mod *~ wt.x
